<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10sp"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".StudentEnterDetails">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="#ef0000"
        android:layout_height="wrap_content"
        android:text="Kindly Fill the below details correctly"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="10sp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Enter Details" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/studentEnterDetailsCities"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:minHeight="48dp"
            android:id="@+id/studentEnterDetailsStates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/StudentEnterDetailsPinCode"
        android:hint="Pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:ems="10"
        android:inputType="number" />

    <Spinner
        android:minHeight="48dp"
        android:id="@+id/studentEnterDetailsReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/StudentEnterDetailsSubmit"
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <TextView
        android:layout_marginVertical="10sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="#ef0000"
        android:layout_height="wrap_content"
        android:text="All Fields Mandatory *"/>


</LinearLayout>